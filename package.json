  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phala-Network/phat-function-cli.git"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "chalk": "4",
    "ethers": "^6.7.1",
    "filesize": "^10.0.12",
